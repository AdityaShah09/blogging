<div class="col-md-6 py-3 border mx-auto">
  <h4 class="pb-2">Update Profile<hr></h4> 
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <div class="field">
          <%= f.label :Firstname %><br>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "Firstname", :class => "form-control"%>
        </div>
      </div> 
      <div class="form-group col-md-6">
        <div class="field">
          <%= f.label :Lastname %><br>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",placeholder: "Lastname", :class => "form-control"%>
        </div>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <div class="field">
          <%= f.label :Email %><br>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :readonly => true, :class => "form-control" %>
        </div>
      </div>
      <div class="form-group col-md-6">
        <div class="field">
          <%= f.label :Date_of_Birth %><br>
          <%= f.text_field :dob, autofocus: true, autocomplete: 'dob', :class => 'form-control', id: 'datepicker' %>  
        </div>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">   
        <div class="field">
          <%= f.label :Gender %><br>
          <%= f.select :gender, %w{Male Female Other},{}, class: 'form-control', id: 'inputState', autocomplete: 'gender' %>
        </div>
      </div>
      <div class="form-group col-md-6">
        <div class="field">
          <%= f.label :Mobile %><br>
          <%= f.text_field :mobile, autofocus: true, autocomplete: "mobile", placeholder: 'Mobile', class: 'form-control' %>
        </div>
      </div>

       <div class="form-group col-md-12">
        <div class="field">
          <%= f.password_field :current_password, autofocus: true, placeholder: 'Current Password', class: 'form-control' %>
        </div>
      </div>

    </div>
    <div class="actions">
      <%= f.submit "Update Profile", class: 'btn btn-primary form-control' %>
    </div>
      <div >
      <%= link_to "Back", root_path(current_user), class: 'btn btn-success form-control text-white' %>
    </div>
  <% end %>
</div>
